generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}


model User {
  id                 String           @id // Auth0 sub ID
  email              String           @unique
  displayName        String           @map("display_name")
  stripeCustomerId   String?          @unique @map("stripe_customer_id")
  createdAt          DateTime         @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  artistProfile      ArtistProfile?
  playlists          Playlist[]
  artistFollowers    ArtistFollower[]
  trackLikes         TrackLike[]
  trackPlays         TrackPlay[]
  subscriptions      Subscription[]
  payments           Payment[]

  @@map("users")
}

model ArtistProfile {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId     String   @unique @map("user_id")
  artistName String   @map("artist_name")
  bio        String?
  verified   Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  albums     Album[]
  tracks     Track[]
  followers  ArtistFollower[]

  @@map("artist_profiles")
}

model Album {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  artistId      String    @map("artist_id") @db.Uuid
  title         String
  coverArtUrl   String?   @map("cover_art_url")
  releaseDate   DateTime? @map("release_date") @db.Date
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  deletedAt     DateTime? @map("deleted_at") @db.Timestamptz(6)

  // Relations
  artist        ArtistProfile @relation(fields: [artistId], references: [id], onDelete: Cascade)
  tracks        Track[]

  @@map("albums")
}

model Track {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  artistId        String   @map("artist_id") @db.Uuid
  albumId         String?  @map("album_id") @db.Uuid
  trackNumber     Int?     @map("track_number")
  title           String
  durationSeconds Int      @map("duration_seconds")
  audioUrl        String   @map("audio_url")
  state           String   @default("processing") // processing | ready | failed | deleted
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  publishedAt     DateTime? @map("published_at") @db.Timestamptz(6)

  // Relations
  artist          ArtistProfile    @relation(fields: [artistId], references: [id], onDelete: Cascade)
  album           Album?           @relation(fields: [albumId], references: [id], onDelete: SetNull)
  playlistTracks  PlaylistTrack[]
  likes           TrackLike[]
  plays           TrackPlay[]

  @@map("tracks")
}

model Playlist {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @map("user_id")
  name      String
  isPublic  Boolean  @default(false) @map("is_public")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks    PlaylistTrack[]

  @@map("playlists")
}

model PlaylistTrack {
  playlistId String   @map("playlist_id") @db.Uuid
  trackId    String   @map("track_id") @db.Uuid
  position   Int
  addedAt    DateTime @default(now()) @map("added_at") @db.Timestamptz(6)

  // Relations
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  track      Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@id([playlistId, trackId])
  @@map("playlist_tracks")
}

model ArtistFollower {
  userId    String   @map("user_id")
  artistId  String   @map("artist_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  artist    ArtistProfile @relation(fields: [artistId], references: [id], onDelete: Cascade)

  @@id([userId, artistId])
  @@map("artist_followers")
}

model TrackLike {
  userId    String   @map("user_id")
  trackId   String   @map("track_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@id([userId, trackId])
  @@map("track_likes")
}

model TrackPlay {
  id                    String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId                String?  @map("user_id")
  trackId               String   @map("track_id") @db.Uuid
  playedAt              DateTime @default(now()) @map("played_at") @db.Timestamptz(6)
  durationPlayedSeconds Int      @map("duration_played_seconds")

  // Relations
  user                  User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  track                 Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@index([trackId])
  @@index([userId])
  @@map("track_plays")
}

model Subscription {
  id                   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId               String   @map("user_id")
  stripeSubscriptionId String   @unique @map("stripe_subscription_id")
  status               String   // active | past_due | canceled | trialing
  currentPeriodStart   DateTime @map("current_period_start") @db.Timestamptz(6)
  currentPeriodEnd     DateTime @map("current_period_end") @db.Timestamptz(6)
  createdAt            DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model Payment {
  id                    String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId                String   @map("user_id")
  stripePaymentIntentId String   @unique @map("stripe_payment_intent_id")
  amount                Int
  currency              String
  status                String
  createdAt             DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("payments")
}
